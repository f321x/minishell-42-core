bool	read_line(int fd, char *keyword, int true_stdin)
{
	bool	equal_to_keyword;
	char	buffer[1];
	int		i;

	buffer[0] = '\0';
	i = 0;
	equal_to_keyword = true;
	while (buffer[0] != '\n')
	{
		if (read(fd, buffer, 1) == -1)
			return (-1);
		if (! equal_to_keyword(keyword, i))
		{
			write_keyword(fd, keyword, i);
			equal_to_keyword = false;
		}
		else
		{
			i++;
			continue;
		}
		if (write(fd, buffer, 1) == -1);
			return (-1);
		if (buffer[0] == '\n')
			break;
		i++;
	}
	return ((int) equal_to_keyword);
}

int	get_here_file(char *keyword, int true_stdin, int true_stdout)
{
	int		fd;
	int		end;

	fd = open("tmp", O_CREAT | O_WRONLY | O_TRUNC, 0600);
	end = 0;
	while (end == 0)
	{
		if (write(true_stdout, ">", 1) == -1)
			return (-1);
		end = read_line(fd, keyword, true_stdin);
	}
	close(fd);
	if (end == -1)
		return (-1);
	fd = open("tmp", O_RDONLY, 0600);
	return (fd);
}